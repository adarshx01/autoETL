# ============================================
# AutoETL Configuration Template
# Copy this file to .env and fill in your values
# ============================================

# ===================
# Database Connections
# ===================

# Source Database (DB1) - Where original data resides
# Examples:
# PostgreSQL: postgresql://user:password@localhost:5432/database_name
# MySQL: mysql+pymysql://user:password@localhost:3306/database_name
# SQL Server: mssql+pyodbc://user:password@localhost:1433/database_name?driver=ODBC+Driver+17+for+SQL+Server
# Oracle: oracle+cx_oracle://user:password@localhost:1521/service_name
DB1_CONNECTION_STRING=postgresql://user:password@localhost:5432/source_db

# Target Database (DB2) - Where transformed data is stored
DB2_CONNECTION_STRING=postgresql://user:password@localhost:5432/target_db

# ===================
# AI Provider Configuration
# ===================

# Choose AI provider: "openai" or "gemini"
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-2024-08-06

# Google Gemini Configuration (alternative to OpenAI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# ===================
# ETL Configuration
# ===================

# Number of records to process per batch
BATCH_SIZE=10000

# Maximum number of worker threads
MAX_WORKERS=10

# Enable Dask for distributed processing (true/false)
ENABLE_DASK=true

# ===================
# Monitoring & Metrics
# ===================

# Redis Configuration (for caching and metrics)
REDIS_HOST=localhost
REDIS_PORT=6379

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# ===================
# Logging
# ===================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===================
# Performance Tuning
# ===================

# Database connection pool size
DB_POOL_SIZE=20

# Maximum database connection overflow
DB_MAX_OVERFLOW=40

# Connection timeout in seconds
DB_CONNECT_TIMEOUT=10

# Query timeout in seconds
DB_QUERY_TIMEOUT=300

# ===================
# Test Configuration
# ===================

# Minimum pass rate threshold for tests (percentage)
MIN_PASS_RATE=95

# Maximum test execution time in seconds
MAX_TEST_EXECUTION_TIME=3600

# ===================
# Report Configuration
# ===================

# Report output directory
REPORT_DIR=reports

# Report format: html, pdf, both
REPORT_FORMAT=html

# ===================
# Security (Optional)
# ===================

# Encrypt sensitive data in reports (true/false)
ENCRYPT_REPORTS=false

# Report password protection (if encryption enabled)
REPORT_PASSWORD=

# ===================
# Advanced Settings
# ===================

# Enable debug mode (true/false)
DEBUG=false

# Enable query logging (true/false)
LOG_QUERIES=false

# Maximum memory usage per worker (MB)
MAX_MEMORY_MB=4096

# Retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Delay between retries (seconds)
RETRY_DELAY=5
